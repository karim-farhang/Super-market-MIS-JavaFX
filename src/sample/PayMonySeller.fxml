<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" onMouseDragged="#MouseDraggerd" onMousePressed="#MousePressed" prefHeight="381.0"
      prefWidth="660.0" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="sample.PayMonySeller">
    <children>
        <TableView fx:id="table" nodeOrientation="RIGHT_TO_LEFT" prefHeight="399.0" prefWidth="419.0">
            <columns>
                <TableColumn fx:id="col_product" prefWidth="75.0" text="اجناس"/>
                <TableColumn fx:id="col_total" prefWidth="75.0" text="تعداد"/>
                <TableColumn fx:id="col_unit" prefWidth="75.0" text="واحد"/>
                <TableColumn fx:id="col_price" prefWidth="75.0" text="قیمت"/>
                <TableColumn fx:id="col_import_date" prefWidth="118.0" text="تاریخ خرید"/>
            </columns>
        </TableView>
        <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="222.0" spacing="30.0">
            <children>
                <JFXComboBox fx:id="comb_seller" labelFloat="true" onAction="#comb_seller_onAction" prefHeight="30.0"
                             prefWidth="200.0" promptText="فروشنده را انتخات کنید"/>
                <HBox alignment="CENTER_RIGHT" prefHeight="33.0" spacing="20.0">
                    <children>
                        <Label fx:id="txt_total_mony" prefHeight="30.0" prefWidth="115.0" text="000000000"
                               textFill="#09b91d">
                            <font>
                                <Font name="System Bold" size="15.0"/>
                            </font>
                        </Label>
                        <Label text="مبلغ کلی  -&gt;"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" layoutX="20.0" layoutY="60.0" prefHeight="33.0" spacing="20.0">
                    <children>
                        <Label fx:id="txt_reminder" prefHeight="30.0" prefWidth="90.0" text="000000000"
                               textFill="#f50606">
                            <font>
                                <Font name="System Bold" size="15.0"/>
                            </font>
                        </Label>
                        <Label text="مبلغ باقیمانده  -&gt;"/>
                    </children>
                </HBox>
                <JFXTextField fx:id="txt_pay" alignment="CENTER" labelFloat="true" prefHeight="30.0" prefWidth="200.0"
                              promptText="مبلع پرداخت را وارید کنید"/>
                <JFXTextField fx:id="txt_pay_date" alignment="CENTER" labelFloat="true" prefHeight="30.0"
                              prefWidth="200.0" promptText="تاریخ پرداخت"/>
                <HBox alignment="CENTER" prefHeight="56.0" prefWidth="202.0">
                    <children>
                        <JFXButton fx:id="btn_close" buttonType="RAISED" mnemonicParsing="false"
                                   onAction="#btn_close_onAction" prefHeight="30.0" prefWidth="90.0" text="بستن"/>
                        <JFXButton fx:id="btn_ok" buttonType="RAISED" mnemonicParsing="false"
                                   onAction="#btn_ok_onAction" prefHeight="30.0" prefWidth="90.0" text="ثبت"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</HBox>
